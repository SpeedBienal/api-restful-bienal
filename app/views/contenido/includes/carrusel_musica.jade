div.col-md-10.col-sm-12.col-md-offset-1.text-center
  div#carousel-musica.carousel.slide
    ol.carousel-indicators
      each val in [1,2,3,4,5,6,7]
        case val
          when 1
            li.active(data-target="#carousel-musica" data-slide-to="#{val}")
          default
            li(data-target="#carousel-musica" data-slide-to="#{val}")

    div.carousel-inner
      each val in [1,2,3,4,5,6,7]
        case val
          when 1
            div.item.active
              img.img-responsive.img-full(src="img/programa/musica/#{val}.png")/
          default
            div.item
              img.img-responsive.img-full(src="img/programa/musica/#{val}.png")/

    a.left.carousel-control(href="#carousel-musica" data-slide="prev")
      span.icon-prev
    a.right.carousel-control(href="#carousel-musica" data-slide="next")
      span.icon-next
